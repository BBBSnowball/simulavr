# template makefile for timertests

AVRS=../../src/avrs$(EXEEXT)

test: %(targets)s
	@echo "##################################################################"
	@echo "used runtime (time in userspace) of targets in sec.:"
	@cat $^ | sort
	@echo "##################################################################"

%(rules)s

%%.report: %%.elf $(AVRS)
	@./run_test.sh $@ $($(basename $(notdir $@))_SHELLOPTS) $< -- $(AVRS) $($(basename $(notdir $@))_SIMOPTS) -f $<

define compile-and-link
$(AVR_GCC) $($(basename $(notdir $@))_CCOPTS) -o $@ $^
endef

include Makefile

